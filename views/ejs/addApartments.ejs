    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }
      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    <link href="../css/style.css" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid" id="apartmtNav">
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/"
                  ><h1 id="homeText">RateMyApartments</h1></a
                >
              </li>
            </ul>
            <a class="navbar-brand" href="/apartmentlist"
              ><h5>Apartments</h5></a
            >
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarCollapse"
              aria-controls="navbarCollapse"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/about"><h5>About</h5></a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarCollapse"
              aria-controls="navbarCollapse"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
          </div>
        </div>
      </nav>
    </header>

    <div class="card text-center m-auto w-50 mt-5">
      <div class="card-body">
        <form
          class="row g-3"
          action="/addapartment"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="col-12 col-lg-24">
            <input
              type="text"
              class="form-control"
              placeholder="Name"
              aria-label="Name"
              name="name"
              required
            />
          </div>
          <div class="col-12">
            <input
              type="text"
              class="form-control"
              placeholder="Address"
              aria-label="Address"
              name="address"
            />
          </div>
          <div class="col-sm-6">
            <input
              type="text"
              class="form-control"
              placeholder="City"
              aria-label="City"
              name="city"
            />
          </div>
          <div class="col-sm-6">
            <input
              type="text"
              class="form-control"
              placeholder="Province"
              aria-label="State"
              name="state"
            />
          </div>
          <div class="col-sm-6">
            <input
              type="text"
              class="form-control"
              placeholder="Postal Code"
              aria-label="Postal Code"
              name="postalCode"
            />
          </div>
          <div class="col-sm-6">
            <input
              type="text"
              class="form-control"
              placeholder="Phone Number"
              aria-label="Phone Number"
              name="phone"
            />
          </div>
          <div class="col-sm-6">
            <input
              type="number"
              class="form-control"
              placeholder="# Of Beds"
              aria-label="Beds"
              name="beds"
              required
            />
          </div>
          <div class="col-sm-6">
            <input
              type="number"
              class="form-control"
              placeholder="# Of Bathrooms"
              aria-label="Bathrooms"
              name="bathrooms"
              required
            />
          </div>
          <div class="col-sm-6">
            <input
              type="number"
              class="form-control"
              placeholder="Lease Time"
              aria-label="Lease Time"
              name="leaseMonths"
              required
            />
          </div>
          <div class="col-sm-6">
            <select
              class="form-select"
              aria-label="Default select example"
              name="isPetFriendly"
            >
              <option value="true" selected>Pet Friendly</option>
              <option value="false">Not Pet Friendly</option>
            </select>
          </div>
          <div class="col-sm-6">
            <select
              class="form-select"
              aria-label="Default select example"
              name="isUtilityIncluded"
            >
              <option value="true" selected>Utilities Included</option>
              <option value="false">Utilities Are Not Included</option>
            </select>
          </div>
          <div class="col-12">
            <label for="inputImages" class="text-start">Add Images</label>
            <input
              class="form-control"
              type="file"
              id="formFileMultiple"
              placeholder="Add Images"
              name="image"
            />
          </div>
          <div class="col-12">
            <textarea
              class="form-control"
              id="apartmentDescription"
              placeholder="Apartment Description"
              rows="3"
              name="description"
            ></textarea>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Add Apartment</button>
          </div>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

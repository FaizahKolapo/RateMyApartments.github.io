</header>
<br/>
<br/>
<br/>
<br/>
<br/>
<br/>

<main>
    <div class="box">
        <br/>
        <form class="d-flex" id="searchApartmtList">
            <input
                    class="form-control me-2 searchbtn"
                    type="search"
                    name="search"
                    placeholder="Search apartments"
                    aria-label="Search"
                    value="<%= config.search ? config.search : '' %>"
            />
            <button class="btn btn-primary" id="searchApmnt" type="submit">Search</button>
        </form>
        <form  id="addAptmt" action="addapartments" method="get">
            <button class="btn btn-primary" id="addAptmtq" type="submit">Add</button>
        </form>

        <div class="row1">
            <form class="filters" action="apartmentlist" method="get">
                <input type="checkbox" name="bedrooms" <%= config.bedrooms ? 'checked' : '' %>/>
                <label class="label-inline" for="bedrooms">Bedrooms</label>
                <br/><br/>
                <input type="checkbox" name="pet" <%= config.pet ? 'checked' : '' %> />
                <label class="label-inline" for="pet">PetFriendly</label>
                <br/><br/>
                <input type="checkbox" name="utilities" <%= config.utilities ? 'checked' : '' %>/>
                <label class="label-inline" for="utilities">Utilities Included</label>
                <br/><br/>
                <input type="checkbox" name="oneYear" <%= config.oneYear ? 'checked' : '' %>/>
                <label class="label-inline" for="oneYear">1 Year Lease</label>
                <br/><br/>
                <input type="checkbox" name="sixMonths" <%= config.sixMonths ? 'checked' : '' %>/>
                <label class="label-inline" for="sixMonths">6 months lease</label>
                <br/><br/>
                <button type="submit" class="btn btn-primary">Apply Filters</button>
            </form>
            <div class="row">
                <form>
                    <% if(apartments.length <= 0) { %>
                        <h2> No Apartment Found!</h2>
                    <% } %>
                    <% apartments.map((apartment)=>{ %>
                        <div class="column">
                            <img
                                    src="../images/<%= apartment.image %>"
                                    id="image1"
                                    class="card-img-top"
                                    alt="<%= apartment.name %>"
                            />
                            <div class="card-body">
                                <h5 class="card-title"><%= apartment.name %></h5>
                                <p class="card-text">Bedrooms: <%= apartment.beds %></p>
                                <p class="card-text">Bathrooms: <%= apartment.bathrooms %></p>
                                <p class="card-text">Lease Time: <%= apartment.leaseMonths %> Months</p>
                                <p class="card-text" <%= apartment.isPetFriendly ? '' : 'hidden' %>>Pet Friendly</p>
                                <p class="card-text" <%= apartment.isUtilityIncluded ? '' : 'hidden' %>>Utility
                                    Included</p>
                                <p class="card-text" <%= apartment.description ? '' : 'hidden' %>>
                                    Description: <%= apartment.description %></p>
                                <a href="reviews/<%= apartment._id %>" class="btn btn-primary" style="margin-top: 10px">Reviews</a>
                            </div>
                        </div>
                    <% }) %>
                </form>
            </div>
        </div>


    </div>
</main>
